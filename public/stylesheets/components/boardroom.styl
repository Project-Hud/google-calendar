.background
  padding 0
  background url("/images/boardroom.jpg") no-repeat center center fixed
  background-size cover

.boardroom-status
  box-sizing border-box
  position relative
  width 100%
  height 100%
  padding 30px 0
  padding 8vmin 0

  &.busy
    background-color rgba(253, 0, 17, 0.2)

  &.free
    background-color rgba(0, 253, 17, 0.2)

.boardroom-status__title
  margin 0
  text-align center
  font-size 24px
  font-size 6.3vmin
  font-weight normal

.boardroom-status__subtitle
  display none
  margin 0
  text-align center
  font-size 40px
  font-size 10.3vmin
  font-weight normal

.boardroom-status__status
  position absolute
  bottom 30px
  bottom 8vmin
  left 30px
  left 8vmin
  right 30px
  right 8vmin
  display block
  text-align center
  font-size 24px
  font-size 6.3vmin

